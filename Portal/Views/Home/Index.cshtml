                            <div class="swiper-slide">
                                <img src="~/assets/img/FATHERSDAY.png" alt="">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/assets/img/MothersDay.png" alt="">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/assets/img/kalayaan.png" alt="">
                            </div>

                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="row portfolio-container">

                        <div class="col-md-6 portfolio-item filter-app wow fadeInUp">
                            <div class="portfolio-wrap">
                                <figure>
                                    <a href="https://pmr.flyingv.com.ph/Identity/Account/Login?ReturnUrl=%2F" target="_blank">
                                        <img src="~/assets/img/PMR.jpg" class="img-fluid" alt="">
                                    </a>
                                </figure>
                            </div>
                        </div>

                        <div class="col-md-6 portfolio-item filter-web wow fadeInUp" data-wow-delay="0.1s">
                            <div class="portfolio-wrap">
                                <figure>
                                    <a href="https://pmr.flyingv.com.ph/Identity/Account/Login?ReturnUrl=%2F" target="_blank">
                                        <img src="~/assets/img/VMR.jpg" class="img-fluid" alt="">
                                    </a>
                                </figure>
                            </div>
                        </div>

                        <div class="col-md-6 portfolio-item filter-app wow fadeInUp" data-wow-delay="0.2s">
                            <div class="portfolio-wrap">
                                <figure>
                                    <a href="https://cstm.flyingv.com.ph/" target="_blank">
                                        <img src="~/assets/img/CSTM.jpg" class="img-fluid" alt="">
                                    </a>
                                </figure>
                            </div>
                        </div>
                        <div class="col-md-6 portfolio-item filter-app wow fadeInUp" data-wow-delay="0.2s">
                            <div class="portfolio-wrap">
                                <figure>
                                    <img src="assets/img/portfolio/portfolio-3.jpg" class="img-fluid" alt="">
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Portfolio Details Section -->




</main><!-- End #main -->
